div(ng-include='"components/navbar/navbar.html"')

.container
  .row
    .col-md-12
        textarea(rows='8')
          | {{ console }}

  .row
    .col-md-12
      h1 {{ tricker.name }}

  .row
    .col-lg-12
      h3.page-header Status

  .row
    .col-md-3
      h4 Fitness: {{ tricker.fitness }}
    .col-md-3
      h4 Decrease Rate: {{ fitness.rateOfDecrease }}

  .row
    .col-lg-12
      h3.page-header Tricks
      ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat='trick in tricks')
        li
          a(href='/trick/{{trick._id}}', tooltip='{{trick.info}}')
            | {{ trick.name }}

  .jumbotron

    .row
      .col-md-12
        h2 Belt Types

    .row
      .col-md-12
        .belts
          cm-belt(color='white')
          cm-belt(color='green')
          cm-belt(color='yellow')
          cm-belt(color='blue')
          cm-belt(color='red')
          cm-belt(color='brown')
          cm-belt(color='black')


    .row
      .col-md-12

